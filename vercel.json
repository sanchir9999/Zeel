{
    "version": 2,
    "name": "store-management-system",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "KV_URL": "@kv_url",
        "KV_REST_API_URL": "@kv_rest_api_url",
        "KV_REST_API_TOKEN": "@kv_rest_api_token",
        "KV_REST_API_READ_ONLY_TOKEN": "@kv_rest_api_read_only_token"
    },
    "functions": {
        "app/api/**": {
            "maxDuration": 10
        }
    }
}